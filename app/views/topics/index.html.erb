<%= render "shared/header" %>

<div class="all">
  <div class="side">
    <%= link_to "アリーナ", root_path ,class:"side-category" %>
    <%= link_to "グランバトル", root_path ,class:"side-category" %>
    <%= link_to "イベント", root_path ,class:"side-category" %>
    <%= link_to "ガチャ", root_path ,class:"side-category" %>
    <%= link_to "晒し", root_path ,class:"side-category" %>
    <%= link_to "その他", root_path ,class:"side-category" %>
  </div>
  <div class="main">
    <div class="main-left">
      <% @topics.each do |topics| %>
        <%= link_to topic_path(topics.id) ,class:"topic-link" do %>
          <div class="topics">
            <%= topics.title %><br>
            <div class="topics-date">
              <div class="topics-category"><%= topics.category.name %></div>
              <div class="index-user">
                <% unless topics.anonymous == true %>
                <%= image_tag topics.user.image_url, class:"topic-icon" %>
                <%= time_ago_in_words(topics.created_at) %>前<br>
                <%= topics.user.nickname %>
                <% else %>
                <%= time_ago_in_words(topics.created_at) %>前<br>
                ID: <%= topics.user.public_uid %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="main-right">
    </div>
  </div>
</div>
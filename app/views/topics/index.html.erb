<%= render "shared/header" %>

<div class="all">
  <div class="side">
    <%= link_to "アリーナ", root_path ,class:"side-category" %>
    <%= link_to "グランバトル", root_path ,class:"side-category" %>
    <%= link_to "イベント", root_path ,class:"side-category" %>
    <%= link_to "ガチャ", root_path ,class:"side-category" %>
    <%= link_to "晒し", root_path ,class:"side-category" %>
    <%= link_to "その他", root_path ,class:"side-category" %>
  </div>
  <div class="main">
    <div class="main-right">
      <div class="topic-main">
        <% @topics.each do |topics| %>
          <%= link_to topic_path(topics.id) ,class:"topic-link" do %>
            <div class="topics">
              <%= topics.title %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="main-left">
    </div>
  </div>
</div>
<div class="all">
<%= render "shared/side" %>
<%= render "shared/header" %>
  <div class="main">
    <div class="main-left">
      <% @topics.each do |topics| %>
        <%= link_to topic_path(topics.id) ,class:"topic-link" do %>
          <div class="topics">
            <%= topics.title %><br>
            <%= render partial: 'shared/topics_date', locals: { topics: topics } %>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="main-right">
    <div class="right-title">更新されたトピック</div>
      <% @attention.each do |topics| %>
        <%= link_to topic_path(topics.id) ,class:"attention-link" do %>
          <div class="attention">
            <%= topics.title %><br>
            <%= render partial: 'shared/topics_date', locals: { topics: topics } %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>